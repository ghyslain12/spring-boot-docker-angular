package com.example.backend.entity;

import jakarta.persistence.*;
import java.time.LocalDateTime;

import com.fasterxml.jackson.annotation.JsonProperty;

@Entity
@Table(name = "customers")
public class Customer {
	@Id
    @GeneratedValue(strategy = GenerationType.IDENTITY)
    private Integer id;

    @ManyToOne
    @JoinColumn(name = "user_id", nullable = false)
    private User user;

    @Column(nullable = false)
    private String surnom;

    @Column(name = "created_at")
    @JsonProperty("created_at") // Renomme createdAt en created_at dans le JSON
    private LocalDateTime createdAt = LocalDateTime.now();

    @Column(name = "updated_at")
    @JsonProperty("updated_at") // Renomme updatedAt en updated_at dans le JSON
    private LocalDateTime updatedAt = LocalDateTime.now();

    // Ajoute un getter pour user_id
    @JsonProperty("user_id") // Ajoute user_id dans la r√©ponse
    public Integer getUserId() {
        return user != null ? user.getId() : null;
    }

	@Override
	public String toString() {
	    return "Customer{id=" + id + ", surnom=" + surnom + "}";
	}
	
	public Integer getId() {
		return id;
	}

	public void setId(Integer id) {
		this.id = id;
	}

	public User getUser() {
		return user;
	}

	public void setUser(User user) {
		this.user = user;
	}

	public String getSurnom() {
		return surnom;
	}

	public void setSurnom(String surnom) {
		this.surnom = surnom;
	}

	public LocalDateTime getCreatedAt() {
		return createdAt;
	}

	public void setCreatedAt(LocalDateTime createdAt) {
		this.createdAt = createdAt;
	}

	public LocalDateTime getUpdatedAt() {
		return updatedAt;
	}

	public void setUpdatedAt(LocalDateTime updatedAt) {
		this.updatedAt = updatedAt;
	}    
	

}
